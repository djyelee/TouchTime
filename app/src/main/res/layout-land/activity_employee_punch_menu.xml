<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://www.gueei.com/android-binding/"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">

    <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:layout_marginBottom="5dp">
            <TextView
                android:id="@+id/current_date"
                android:textSize="@dimen/medium_text_size"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:textColor="@color/svw_blue"
                android:text="Date"
                android:textStyle="bold|italic"
                android:gravity="center" />
            <TextView
                android:id="@+id/current_time"
                android:textSize="@dimen/medium_text_size"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:textColor="@color/svw_blue"
                android:text="Time"
                android:textStyle="bold|italic"
                android:gravity="center" />
            <Button
                android:id="@+id/employee_punch_in"
                android:text="@string/button_punch_in"
                android:textSize="@dimen/medium_text_size"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/roundshapebtn"
                android:layout_marginRight="5dp"
                android:clickable="true"
                android:onClick="onPunchInButtonClicked"
                android:layout_gravity="center_vertical" />
            <Button
                android:id="@+id/employee_punch_out"
                android:text="@string/button_punch_out"
                android:textSize="@dimen/medium_text_size"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/roundshapebtn"
                android:layout_marginRight="5dp"
                android:clickable="true"
                android:onClick="onPunchOutButtonClicked"
                android:layout_gravity="center_vertical" />
            <Button
                android:id="@+id/employee_select_job"
                android:text="@string/button_move_job"
                android:textSize="@dimen/medium_text_size"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/roundshapebtn"
                android:layout_marginRight="5dp"
                android:clickable="true"
                android:onClick="onSelectJobButtonClicked"
                android:layout_gravity="center_vertical" />
            <Button
                android:id="@+id/employee_remove_job"
                android:text="@string/button_remove_job"
                android:textSize="@dimen/medium_text_size"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/roundshapebtn"
                android:layout_marginRight="5dp"
                android:clickable="true"
                android:onClick="onRemoveJobButtonClicked"
                android:layout_gravity="center_vertical" />

    </TableRow>

    <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="5dp">
                <Button
                    android:id="@+id/sort_id"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.0"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/roundshapebtn"
                    android:text="@string/column_key_id"
                    android:textSize="@dimen/medium_small_text_size"
                    android:textStyle="bold|italic"
                    android:clickable="true"
                    android:onClick="onSortIDButtonClicked"
                    android:gravity="center" />
                <Button
                    android:id="@+id/sort_punch_status"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/roundshapebtn"
                    android:text="@string/column_key_status"
                    android:textSize="@dimen/medium_small_text_size"
                    android:textStyle="bold|italic"
                    android:clickable="true"
                    android:onClick="onSortStatusButtonClicked"
                    android:gravity="center" />
                <Button
                    android:id="@+id/sort_group"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/roundshapebtn"
                    android:text="@string/column_key_group"
                    android:textSize="@dimen/medium_small_text_size"
                    android:textStyle="bold|italic"
                    android:clickable="true"
                    android:onClick="onSortGroupButtonClicked"
                    android:gravity="center" />
                <Button
                    android:id="@+id/sort_last_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/roundshapebtn"
                    android:text="@string/report_selection_last_name"
                    android:textSize="@dimen/medium_small_text_size"
                    android:textStyle="bold|italic"
                    android:clickable="true"
                    android:onClick="onSortLastNameButtonClicked"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:layout_marginRight="5dp"
                    android:text="@string/report_selection_last_name"
                    android:textSize="@dimen/medium_small_text_size"
                    android:textStyle="bold|italic"
                    android:textColor="@color/svw_black"
                    android:background="@color/svw_orange"
                    android:gravity="center" />

                <Button
                    android:id="@+id/sort_company"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/roundshapebtn"
                    android:text="@string/column_key_company"
                    android:textSize="@dimen/medium_small_text_size"
                    android:textStyle="bold|italic"
                    android:clickable="true"
                    android:onClick="onSortCompanyButtonClicked"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:layout_marginRight="5dp"
                    android:text="@string/column_key_location"
                    android:textSize="@dimen/medium_small_text_size"
                    android:textStyle="bold|italic"
                    android:textColor="@color/svw_black"
                    android:background="@color/svw_orange"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:layout_marginRight="5dp"
                    android:text="@string/column_key_job"
                    android:textSize="@dimen/medium_small_text_size"
                    android:textStyle="bold|italic"
                    android:textColor="@color/svw_black"
                    android:background="@color/svw_orange"
                    android:gravity="center" />

    </TableRow>

            <ListView
                android:id="@+id/universal_list_view"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="13.5"
                android:background="@drawable/list_view_border"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginRight="5dp"
                android:choiceMode="multipleChoiceModal"
                android:listSelector="@android:color/darker_gray"/>

</LinearLayout>

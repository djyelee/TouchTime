<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/textViewLastName"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="start|center_vertical"
        android:paddingLeft="5dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:textColor="#000000"
        android:textSize="@dimen/view_small_size"
        android:singleLine="true"
        />

    <TextView
        android:id="@+id/textViewFirstName"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="0.8"
        android:gravity="start|center_vertical"
        android:paddingLeft="5dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:textColor="#000000"
        android:textSize="@dimen/view_small_size"
        android:singleLine="true"
        />

    <TextView
        android:id="@+id/textViewTimeIn"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="0.9"
        android:gravity="center"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:textColor="#000000"
        android:textSize="@dimen/view_small_size"
        android:onClick="onColumnClicked"
        />

    <TextView
        android:id="@+id/textViewTimeOut"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="0.9"
        android:gravity="center"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:textColor="#000000"
        android:textSize="@dimen/view_small_size"
        android:onClick="onColumnClicked"
        />
     <TextView
        android:id="@+id/textViewLunch"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="0.4"
        android:gravity="center"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:textColor="#000000"
        android:textSize="@dimen/view_small_size"
        android:layout_centerVertical="true"
        android:onClick="onColumnClicked"
        />
    <TextView
        android:id="@+id/textViewHours"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="0.4"
        android:gravity="center"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:textColor="#000000"
        android:textSize="@dimen/view_small_size"
        />
   <TextView
        android:id="@+id/textViewCompany"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="0.8"
        android:gravity="start|center_vertical"
        android:paddingLeft="5dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:textColor="#000000"
        android:textSize="@dimen/view_small_size"
       android:singleLine="true"
        />

    <TextView
        android:id="@+id/textViewLocation"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="0.6"
        android:gravity="start|center_vertical"
        android:paddingLeft="5dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:textColor="#000000"
        android:textSize="@dimen/view_small_size"
        android:singleLine="true"
        />

    <TextView
        android:id="@+id/textViewJob"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="0.6"
        android:gravity="start|center_vertical"
        android:paddingLeft="5dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:textColor="#000000"
        android:textSize="@dimen/view_small_size"
        android:singleLine="true"
        />

    <TextView
        android:id="@+id/textViewGroup"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="0.35"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:textColor="#000000"
        android:textSize="@dimen/view_small_size"
        android:gravity="center"
        android:onClick="onColumnClicked"
        />

    <TextView
        android:id="@+id/textViewSupervisor"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:paddingLeft="5dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:textColor="#000000"
        android:textSize="@dimen/view_small_size"
        android:gravity="start|center_vertical"
        android:onClick="onColumnClicked"
        android:singleLine="true"
    />
    <TextView
        android:id="@+id/textViewComments"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:paddingLeft="5dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:textColor="#000000"
        android:textSize="@dimen/view_small_size"
        android:gravity="start|center_vertical"
        android:onClick="onColumnClicked"
        android:singleLine="true"
        />
</LinearLayout>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://www.gueei.com/android-binding/"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:background="?android:attr/activatedBackgroundIndicator">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <TableLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="4.0"
            >
             <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/selection"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:orientation="horizontal" >
                <RadioButton
                    android:id="@+id/radio_employee"
                    android:paddingRight="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/radio_employee"
                    android:textSize="@dimen/medium_text_size"
                    android:onClick="onRadioButtonClicked"
                    android:layout_gravity="center_vertical"
                    android:checked="true"
                    android:clickable="true" />
                <RadioButton
                    android:id="@+id/radio_company"
                    android:paddingRight="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/radio_company"
                    android:textSize="@dimen/medium_text_size"
                    android:onClick="onRadioButtonClicked"
                    android:layout_gravity="center_vertical"
                    android:clickable="true" />
                <RadioButton
                    android:id="@+id/radio_loc"
                    android:paddingRight="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/radio_loc"
                    android:textSize="@dimen/medium_text_size"
                    android:onClick="onRadioButtonClicked"
                    android:layout_gravity="center_vertical"
                    android:clickable="true" />
                <RadioButton
                    android:id="@+id/radio_job"
                    android:paddingRight="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/radio_job"
                    android:textSize="@dimen/medium_text_size"
                    android:onClick="onRadioButtonClicked"
                    android:layout_gravity="center_vertical"
                    android:clickable="true" />
            </RadioGroup>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingRight="5dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/sort_id"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.5"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/roundshapebtn"
                    android:text="@string/employee_selection_item_id"
                    android:textSize="@dimen/medium_text_size"
                    android:textStyle="bold|italic"
                    android:clickable="true"
                    android:onClick="onSortIDButtonClicked"
                    android:gravity="center" />

                <Button
                    android:id="@+id/sort_last_name"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="5"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/roundshapebtn"
                    android:text="@string/employee_selection_item_last_name"
                    android:textSize="@dimen/medium_text_size"
                    android:textStyle="bold|italic"
                    android:clickable="true"
                    android:onClick="onSortLastNameButtonClicked"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="4.3"
                    android:paddingLeft="5dp"
                    android:text="@string/employee_selection_item_first_name"
                    android:textSize="@dimen/medium_text_size"
                    android:textStyle="bold|italic"
                    android:textColor="@color/svw_black"
                    android:background="@color/svw_orange"
                    android:gravity="center_vertical" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:text="@string/employee_selection_item_group"
                    android:textSize="@dimen/medium_text_size"
                    android:textStyle="bold|italic"
                    android:textColor="@color/svw_black"
                    android:background="@color/svw_orange"
                    android:gravity="center_vertical" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.8"
                    android:text="@string/employee_selection_item_status"
                    android:textSize="@dimen/medium_text_size"
                    android:textStyle="bold|italic"
                    android:textColor="@color/svw_black"
                    android:background="@color/svw_orange"
                    android:gravity="center_vertical" />
            </TableRow>

            <ListView
                android:id="@+id/universal_list_view"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:background="@drawable/list_view_border"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginRight="5dp"
                android:choiceMode="singleChoice"
                android:listSelector="@android:color/darker_gray"/>
        </TableLayout>

        <TableLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            >
            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                />
            <TextView
                android:id="@+id/current_date"
                android:textSize="@dimen/medium_text_size"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="@color/svw_blue"
                android:text="Date"
                android:textStyle="bold|italic"
                android:gravity="center" />
            <TextView
                android:id="@+id/current_time"
                android:textSize="@dimen/medium_text_size"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="@color/svw_blue"
                android:text="Time"
                android:textStyle="bold|italic"
                android:gravity="center" />
           <Button
                android:id="@+id/group_punch_in"
                android:text="@string/button_punch_in"
                android:textSize="@dimen/medium_text_size"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/roundshapebtn"
                android:layout_marginRight="3dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:clickable="true"
                android:onClick="onPunchInButtonClicked"
                android:layout_gravity="center_vertical" />
            <Button
                android:id="@+id/group_punch_out"
                android:text="@string/button_punch_out"
                android:textSize="@dimen/medium_text_size"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/roundshapebtn"
                android:layout_marginRight="3dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:clickable="true"
                android:onClick="onPunchOutButtonClicked"
                android:layout_gravity="center_vertical" />
            <Button
                android:id="@+id/group_move"
                android:text="@string/button_move_job"
                android:textSize="@dimen/medium_text_size"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/roundshapebtn"
                android:layout_marginRight="3dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:clickable="true"
                android:onClick="onMoveJobButtonClicked"
                android:layout_gravity="center_vertical" />

        </TableLayout>

    </LinearLayout>

</LinearLayout>

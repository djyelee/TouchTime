<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://www.gueei.com/android-binding/"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:background="?android:attr/activatedBackgroundIndicator">

    <TableRow
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button
            android:text="@string/button_del"
            android:textSize="@dimen/medium_text_size"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/roundshapebtn"
            android:clickable="true"
            android:onClick="onDeleteButtonClicked"
            android:layout_gravity="center_vertical" />

        <Button
            android:text="@string/button_upd"
            android:textSize="@dimen/medium_text_size"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/roundshapebtn"
            android:clickable="true"
            android:onClick="onUpdateButtonClicked"
            android:layout_gravity="center_vertical" />

        <Button
            android:text="@string/button_new"
            android:textSize="@dimen/medium_text_size"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/roundshapebtn"
            android:clickable="true"
            android:onClick="onAddButtonClicked"
            android:layout_gravity="center_vertical" />
    </TableRow>

    <ListView
        android:id="@+id/employee_profile_list_view"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:background="@drawable/list_view_border"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:choiceMode="singleChoice"
        android:listSelector="@android:color/darker_gray"/>

</LinearLayout>
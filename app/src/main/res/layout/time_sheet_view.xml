<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/textViewName"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:gravity="start|center_vertical"
        android:paddingLeft="5dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:textColor="#000000"
        android:textSize="@dimen/screen_text_small_size"
        android:singleLine="true"
        />

    <TextView
        android:id="@+id/textViewCompany"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:gravity="start|center_vertical"
        android:paddingLeft="5dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:textColor="#000000"
        android:textSize="@dimen/screen_text_small_size"
        android:singleLine="true"
        />

    <TextView
        android:id="@+id/textViewLocation"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1.2"
        android:gravity="start|center_vertical"
        android:paddingLeft="5dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:textColor="#000000"
        android:textSize="@dimen/screen_text_small_size"
        android:singleLine="true"
        />

    <TextView
        android:id="@+id/textViewJob"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1.2"
        android:gravity="start|center_vertical"
        android:paddingLeft="5dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:textColor="#000000"
        android:textSize="@dimen/screen_text_small_size"
        android:singleLine="true"
        />

    <TextView
        android:id="@+id/textViewSupervisor"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1.2"
        android:gravity="start|center_vertical"
        android:paddingLeft="5dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:textColor="#000000"
        android:textSize="@dimen/view_small_size"
        android:singleLine="true"
        />

    <TextView
        android:id="@+id/textViewSunday"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:gravity="end|center_vertical"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:textColor="#000000"
        android:textSize="@dimen/view_small_size"
        />

    <TextView
        android:id="@+id/textViewMonday"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:gravity="end|center_vertical"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:textColor="#000000"
        android:textSize="@dimen/view_small_size"
        />
    <TextView
        android:id="@+id/textViewTuesday"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:gravity="end|center_vertical"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:textColor="#000000"
        android:textSize="@dimen/view_small_size"
        />
    <TextView
        android:id="@+id/textViewWednesday"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:gravity="end|center_vertical"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:textColor="#000000"
        android:textSize="@dimen/view_small_size"
        />
    <TextView
        android:id="@+id/textViewThursday"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:gravity="end|center_vertical"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:textColor="#000000"
        android:textSize="@dimen/view_small_size"
        />
    <TextView
        android:id="@+id/textViewFriday"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:gravity="end|center_vertical"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:textColor="#000000"
        android:textSize="@dimen/view_small_size"
        />
    <TextView
        android:id="@+id/textViewSaturday"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:gravity="end|center_vertical"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:textColor="#000000"
        android:textSize="@dimen/view_small_size"
        />

    <TextView
        android:id="@+id/textViewHours"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="0.75"
        android:gravity="end|center_vertical"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:textColor="#000000"
        android:textSize="@dimen/view_small_size"
        />

</LinearLayout>


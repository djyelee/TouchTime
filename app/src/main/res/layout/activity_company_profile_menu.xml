<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://www.gueei.com/android-binding/"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="?android:attr/activatedBackgroundIndicator">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_marginRight="5dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="5dp">
            <Button
                android:text="@string/button_import"
                android:textSize="@dimen/medium_text_size"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/roundshapebtn"
                android:clickable="true"
                android:onClick="onImportButtonClicked"
                android:layout_gravity="center" />

            <Button
                android:text="@string/button_export"
                android:textSize="@dimen/medium_text_size"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/roundshapebtn"
                android:clickable="true"
                android:onClick="onExportButtonClicked"
                android:layout_gravity="center" />
        </TableRow>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:text="@string/company_name_header"
            android:textSize="@dimen/medium_text_size"
            android:textStyle="bold|italic"
            android:focusable="false"
            android:textColor="@color/svw_black"
            android:background="@color/svw_orange"/>

        <ListView
            android:id="@+id/company_profile_list_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:background="@drawable/list_view_border"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:choiceMode="singleChoice"
            android:listSelector="@color/svw_cyan"/>   <!-- Set to the same color as the background so it does not highlight-->
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">
        <TableRow
            android:layout_weight="1.2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp">
            <TextView
                android:textSize="@dimen/medium_text_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/name_title_text"
                android:textStyle="bold|italic"
                android:textColor="@color/svw_blue"
                android:layout_weight="1.3"
                android:layout_gravity="center_vertical" />
            <EditText
                android:id="@+id/company_name_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/medium_text_size"
                android:inputType="textCapWords"
                android:textColor="@color/svw_black"
                android:layout_weight="4.7"
                android:paddingLeft="10dp"
                android:clickable="true"
                android:background="@color/svw_dark_gray"
                android:layout_gravity="center_vertical" />
        </TableRow>
        <TableRow
            android:layout_weight="1.2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp">
            <TextView
                android:textSize="@dimen/medium_text_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/street_title_text"
                android:textStyle="bold|italic"
                android:textColor="@color/svw_blue"
                android:layout_weight="1.3"
                android:layout_gravity="center_vertical" />
            <EditText
                android:id="@+id/company_street_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/medium_text_size"
                android:inputType="textCapWords"
                android:textColor="@color/svw_black"
                android:layout_weight="4.7"
                android:paddingLeft="10dp"
                android:background="@color/svw_dark_gray"
                android:layout_gravity="center_vertical" />
        </TableRow>
        <TableRow
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp">
            <TextView
                android:textSize="@dimen/medium_text_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/city_title_text"
                android:textStyle="bold|italic"
                android:textColor="@color/svw_blue"
                android:layout_weight="1.3"
                android:layout_gravity="center_vertical" />

            <Spinner
                android:id="@+id/city_spinner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4.7"
                android:background="@color/svw_dark_gray"
                android:textSize="@dimen/medium_text_size"
                android:touchscreenBlocksFocus="false"
                android:gravity="center" />
        </TableRow>
        <TableRow
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp">
            <TextView
                android:textSize="@dimen/medium_text_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/state_title_text"
                android:textStyle="bold|italic"
                android:textColor="@color/svw_blue"
                android:layout_weight="1.3"
                android:layout_gravity="center_vertical" />
            <Spinner
                android:id="@+id/state_spinner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.1"
                android:layout_marginEnd="3dp"
                android:layout_marginRight="3dp"
                android:background="@color/svw_dark_gray"
                android:textSize="@dimen/medium_text_size"
                android:touchscreenBlocksFocus="false"
                android:gravity="center" />
            <TextView
                android:textSize="@dimen/medium_text_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/zip_code_title_text"
                android:textStyle="bold|italic"
                android:textColor="@color/svw_blue"
                android:layout_weight="1.4"
                android:paddingLeft="5dp"
                android:layout_gravity="center_vertical" />
            <EditText
                android:id="@+id/company_zip_code_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/medium_text_size"
                android:inputType="number"
                android:textColor="@color/svw_black"
                android:layout_weight="1.2"
                android:paddingLeft="5dp"
                android:background="@color/svw_dark_gray"
                android:layout_gravity="center_vertical" />
        </TableRow>
        <TableRow
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp">
            <TextView
                android:textSize="@dimen/medium_text_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/country_title_text"
                android:textStyle="bold|italic"
                android:textColor="@color/svw_blue"
                android:layout_weight="1.3"
                android:layout_gravity="center_vertical" />
            <Spinner
                android:id="@+id/country_spinner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.1"
                android:layout_marginEnd="3dp"
                android:layout_marginRight="3dp"
                android:background="@color/svw_dark_gray"
                android:textSize="@dimen/medium_text_size"
                android:touchscreenBlocksFocus="false"
                android:gravity="center" />
            <TextView
                android:textSize="@dimen/medium_text_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/phone_title_text"
                android:textStyle="bold|italic"
                android:textColor="@color/svw_blue"
                android:layout_weight="0.7"
                android:paddingLeft="5dp"
                android:layout_gravity="center_vertical" />
            <EditText
                android:id="@+id/company_phone_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/medium_text_size"
                android:inputType="number"
                android:textColor="@color/svw_black"
                android:layout_weight="1.9"
                android:paddingLeft="10dp"
                android:background="@color/svw_dark_gray"
                android:layout_gravity="center_vertical" />
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp">
            <TextView
                android:textSize="@dimen/medium_text_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/contact_title_text"
                android:textStyle="bold|italic"
                android:textColor="@color/svw_blue"
                android:layout_weight="1.3"
                android:layout_gravity="center_vertical" />
            <EditText
                android:id="@+id/company_contact_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/medium_text_size"
                android:inputType="textCapWords"
                android:textColor="@color/svw_black"
                android:layout_weight="4.7"
                android:paddingLeft="10dp"
                android:background="@color/svw_dark_gray"
                android:layout_gravity="center_vertical" />
        </TableRow>
        <TableRow
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp">
            <TextView
                android:textSize="@dimen/medium_text_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/email_title_text"
                android:textStyle="bold|italic"
                android:textColor="@color/svw_blue"
                android:layout_weight="1.3"
                android:layout_gravity="center_vertical" />
            <EditText
                android:id="@+id/company_email_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/medium_text_size"
                android:inputType="textEmailAddress"
                android:textColor="@color/svw_black"
                android:layout_weight="4.7"
                android:paddingLeft="10dp"
                android:background="@color/svw_dark_gray"
                android:layout_gravity="center_vertical" />
        </TableRow>

        <TableRow
            android:layout_weight="1.2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingRight="0dp"
            android:paddingLeft="0dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn_new"
                android:text="@string/button_new"
                android:textSize="@dimen/medium_text_size"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/roundshapebtn"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:clickable="true"
                android:onClick="onNewUpdateButtonClicked"
                android:layout_gravity="center_vertical" />
            <Button
                android:id="@+id/btn_upd"
                android:text="@string/button_upd"
                android:textSize="@dimen/medium_text_size"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/roundshapebtn"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:clickable="true"
                android:onClick="onNewUpdateButtonClicked"
                android:layout_gravity="center_vertical" />
            <Button
                android:text="@string/button_del"
                android:textSize="@dimen/medium_text_size"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/roundshapebtn"
                android:clickable="true"
                android:onClick="onDeleteButtonClicked"
                android:layout_gravity="center_vertical" />
        </TableRow>
    </LinearLayout>

</LinearLayout>
